<?xml version="1.0" encoding="UTF-8" ?>
<phpunit backupGlobals="false"
	backupStaticAttributes="false"
	colors="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
	verbose="true"
	strict="true">

	<php>
		<env name="VanillaRootDir" value="C:\wamp\www\vanilla" />
		<env name="VanillaVersion" value="2.0.18.4" />
	</php>

	<testsuite name="CronJob Plugin">
		<directory suffix="test.php">./</directory>
	</testsuite>

	<logging>
		<log type="coverage-clover" target="test/artifacts/phpunit/coverage.xml" />
		<log type="junit" target="test/artifacts/phpunit/phpunit.xml" logIncompleteSkipped="true" />
		<log type="testdox-html" target="./logs/testdox.html" />
	</logging>
</phpunit>
