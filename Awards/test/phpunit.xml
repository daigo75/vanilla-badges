<?xml version="1.0" encoding="UTF-8" ?>
<phpunit backupGlobals="false"
	backupStaticAttributes="false"
	bootstrap="init.php"
	colors="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
	verbose="true"
	strict="false">

	<testsuites>
		<testsuite name="Awards Plugin">
			<file>tests/plugin/class.awardsplugin.test.php</file>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-clover" target="tests/artifacts/phpunit/coverage.xml" />
		<log type="junit" target="tests/artifacts/phpunit/phpunit.xml" logIncompleteSkipped="true" />
		<log type="testdox-html" target="./logs/testdox.html" />
	</logging>
</phpunit>
